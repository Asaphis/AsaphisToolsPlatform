# Copy this file to .env.local and fill with your real values

# Backend base URL (optional). If set, frontend will prefer it; otherwise falls back to local data.
NEXT_PUBLIC_API_URL=

# Google AdSense (optional)
NEXT_PUBLIC_ADSENSE_PUBLISHER_ID=pub-xxxxxxxxxxxxxxxx
NEXT_PUBLIC_ADSENSE_SLOT_HEADER=
NEXT_PUBLIC_ADSENSE_SLOT_SIDEBAR=
NEXT_PUBLIC_ADSENSE_SLOT_FOOTER=
NEXT_PUBLIC_ADSENSE_SLOT_INCONTENT=

# Direct ads (optional). If 'true', AdSlot will load from backend /ads or local /api/ads
NEXT_PUBLIC_DIRECT_ADS_ENABLED=false
